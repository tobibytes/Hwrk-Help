{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "declaration": false,
    "types": ["node", "@fastify/cookie"]
  },
  "include": ["src/**/*", "src/types/**/*"],
  "ts-node": {
    "transpileOnly": true
  },
  "exclude": ["node_modules", "dist", "scripts/**/*"]
}

